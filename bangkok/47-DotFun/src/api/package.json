{
  "name": "api",
  "version": "1.0.0",
  "main": "server.ts",
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "concurrently 'npm run dev:api' 'npm run dev:queue'",
    "dev:api": "dotenv -e .env.dev -- ts-node-dev src/api.ts",
    "dev:queue": "dotenv -e .env.dev -- ts-node-dev src/queue.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "start": "dotenv -e .env -- node ./dist/server.js",
    "test": "dotenv -e .env.test -- nyc --reporter=text mocha 'src/test/**/*.ts'",
    "lint": "eslint \"src/**/*.ts\" --max-warnings 0",
    "db:deploy": "prisma migrate deploy",
    "db:dev": "prisma migrate dev && prisma generate",
    "db:generate": "prisma generate"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.670.0",
    "@aws-sdk/client-s3": "3.614.0",
    "@bull-board/api": "^6.0.2",
    "@bull-board/fastify": "^6.0.2",
    "@fastify/cookie": "^10.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/sensible": "^6.0.1",
    "@prisma/client": "^5.20.0",
    "@repo/schema": "workspace:*",
    "@sentry/node": "^8.33.1",
    "@sentry/profiling-node": "^8.33.1",
    "@trpc/server": "next",
    "bs58": "^5.0.0",
    "bull": "^4.16.3",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "dotenv-cli": "^6.0.0",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.1",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.20.0",
    "puppeteer": "^23.5.2",
    "sharp": "^0.33.5",
    "superjson": "^1.12.1",
    "tweetnacl": "^1.0.3",
    "typescript": "5.5.4",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/chai": "^4.3.20",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "chai": "^4.5.0",
    "concurrently": "^9.0.1",
    "eslint": "^8.57.1",
    "mocha": "^10.5.2",
    "nyc": "^17.1.0",
    "pino-pretty": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.1"
  }
}
