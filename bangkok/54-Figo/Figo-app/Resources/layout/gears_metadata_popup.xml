<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="700dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/gears_metadata_popup_bg">
    
    <ImageView android:layout_width="324dp" 
               android:layout_height="228dp"
               android:background="@drawable/beams_metadata"
               android:layout_marginTop="145dp"
               android:layout_marginLeft="20dp"
               android:layout_gravity="center"/>
    
    <Button 
            android:id="@+id/close_button_metadata"
            android:layout_width="20dp" 
            android:layout_height="20dp"
            android:background="@drawable/close_button"
            android:layout_marginLeft="-50dp"
            android:layout_marginTop="30dp"
            />
                 
              
    <TextView android:layout_width="86dp"
              android:layout_height="30dp"
              android:textFontWeight="600"
              android:textSize="20dp"
              android:textColor="@android:color/black"
              android:id="@+id/gears_price"
              android:layout_marginTop="480dp"
              android:layout_marginLeft="-260dp"
    />

    <TextView android:layout_width="245dp"
              android:layout_height="50dp"
              android:textFontWeight="300"
              android:textSize="12dp"
              android:textColor="@android:color/black"
              android:id="@+id/gears_description"
              android:layout_marginTop="520dp"
              android:layout_marginLeft="-90dp"
    />
    <ImageView android:layout_width="250dp"
               android:layout_height="310dp"
               android:layout_marginLeft="-250dp"
               android:layout_marginTop="70dp"
               android:id="@+id/gears_image"
               />

    <TextView android:layout_width="65dp"
              android:layout_height="20dp"
              android:textFontWeight="300"
              android:textSize="10dp"
              android:textColor="@android:color/black"
              android:layout_marginLeft="-52dp"
              android:layout_marginTop="420dp"
              android:id="@+id/gears_slot"/>

    <Button android:layout_width="170dp" 
            android:layout_height="30dp"
            android:layout_marginLeft="-205dp"
            android:layout_marginTop="630dp"
            android:background="@android:color/transparent"
            android:id="@+id/mint_now"/>


</LinearLayout>


              