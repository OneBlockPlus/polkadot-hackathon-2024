<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="700dp"
              android:layout_marginTop="50dp"
              android:background="@drawable/beams_metadata_popup_bg">
    
    

    
    <Button android:layout_width="40dp" 
            android:layout_height="40dp"
            android:layout_marginLeft="145dp"
            android:background="@android:color/transparent"
            android:id="@+id/close_button_beams_metadata"
            android:layout_marginTop="20dp"/>

    <TextView android:layout_width="144dp"
              android:layout_height="20dp"
              android:textFontWeight="500"
              android:textSize="15dp"
              android:textColor="@android:color/black"
              android:id="@+id/wallet_address"
              android:layout_marginTop="471.5dp"
              android:layout_marginLeft="-210dp"
    />

    <TextView android:layout_width="245dp"
              android:layout_height="50dp"
              android:textFontWeight="300"
              android:textSize="12dp"
              android:textColor="@android:color/black"
              android:id="@+id/beams_description"
              android:layout_marginTop="520dp"
              android:layout_marginLeft="-170dp"
    />
    <ImageView android:layout_width="250dp"
               android:layout_height="310dp"
               android:layout_marginLeft="-340dp"
               android:layout_marginTop="70dp"
               android:id="@+id/beams_image"

    />


</LinearLayout>

