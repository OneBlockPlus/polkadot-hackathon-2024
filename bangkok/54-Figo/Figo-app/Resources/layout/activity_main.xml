<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:src="@android:color/white"/>


    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="-10dp"
               android:src="@drawable/pink_b"/>
    
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/wallet_addr"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="184dp"/>


    <TextView android:layout_width="165dp"
              android:layout_height="20dp"
              android:layout_marginBottom="-43dp"
              android:layout_marginLeft="115dp"
              android:textFontWeight="400"
              android:textColor="@android:color/black"
              android:id="@+id/wallet_address_text"
              android:layout_alignBottom="@+id/coins"/>
    
    
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/coins_indicator"
               android:layout_alignParentTop="true"
               android:layout_alignBaseline="@id/beams_owned_image"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="134dp" android:id="@+id/coins"/>


    <TextView android:layout_width="80dp" android:layout_height="30dp"
              android:layout_marginLeft="145dp"
              android:textSize="25dp"
              android:textFontWeight="600"
              android:textColor="@android:color/black"
              android:layout_marginTop="133.5dp"
              android:id="@+id/coin_balance"

    />
    
    <ImageView android:layout_width="200dp"
               android:layout_height="300dp"
               android:layout_alignParentTop="true"
               android:layout_marginTop="228dp"
               android:layout_centerHorizontal="true"
               android:id="@+id/beams_owned_image"
               android:scaleType="fitCenter"/>


    <ImageView android:layout_width="280dp"
               android:layout_height="132dp"
               android:src="@drawable/gears_placeholder"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="530dp"
               android:id="@+id/gears_placeholder"
               />
    
    <Button android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="-101dp"
            android:layout_marginLeft="70dp"
            android:background="@android:color/transparent"
            android:id="@+id/weapon_button"
            android:layout_below="@+id/gears_placeholder"/>
    
    <Button android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="-107dp"
            android:layout_marginLeft="170dp"
            android:background="@android:color/transparent"
            android:id="@+id/equipment_button"
            android:layout_below="@+id/gears_placeholder"/>

    <Button android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="-104dp"
            android:layout_marginLeft="270dp"
            android:background="@android:color/transparent"
            android:id="@+id/footwear_button"
            android:layout_below="@+id/gears_placeholder"/>


    <ImageView android:layout_width="64dp"
               android:layout_height="64dp"
               android:layout_marginTop="555dp"
                android:layout_marginLeft="48dp"
                android:id="@+id/weapon_image_placeholder"/>

    <ImageView android:layout_width="64dp"
               android:layout_height="64dp"
               android:layout_marginTop="555dp"
               android:layout_marginLeft="149dp"
               android:id="@+id/equipment_image_placeholder"/>

    <ImageView android:layout_width="64dp"
               android:layout_height="64dp"
               android:layout_marginTop="555dp"
               android:layout_marginLeft="250dp"
               android:id="@+id/footwear_image_placeholder"/>
    
    
    <LinearLayout
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@android:color/white"
            >

        <LinearLayout
                android:id="@+id/home_layout"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="2dp"
                >
            
            <View
                    android:id="@+id/home_indicator"
                    android:layout_width="55dp"
                    android:layout_height="4dp"
                    android:background="@color/polkadot_pink"
                    android:visibility="invisible"
            />

           
            <ImageView
                    android:id="@+id/icon_home"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:src="@drawable/home_button"
            />

            
            
        </LinearLayout>

        <LinearLayout
                android:id="@+id/play_layout"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >
            
            <ImageView
                    android:id="@+id/icon_play"
                    android:layout_width="wrap_content"
                    android:layout_height="42.3dp"
                    android:src="@drawable/play_button"
                    android:paddingBottom="2dp"
                    />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/store_layout"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >

            <ImageView
                    android:id="@+id/icon_store"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@drawable/store_button"
                    android:paddingBottom="2dp"
                    />
            
        </LinearLayout>



    </LinearLayout>


   
</RelativeLayout>



