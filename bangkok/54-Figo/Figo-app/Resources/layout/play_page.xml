<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/play_background"
                android:gravity="center"
                android:layout_marginTop="-50dp">
    
    
    <ImageView android:layout_width="280dp" 
               android:layout_height="60dp"
               android:layout_marginLeft="35dp"
               android:layout_marginTop="620dp"
               android:src="@drawable/start_game"/>
    
    <Button android:layout_width="250dp" 
            android:layout_height="40dp" 
            android:id="@+id/start_game_button"
            android:layout_marginTop="630dp"
            android:layout_marginLeft="75dp"
            android:gravity="center"
            android:background="@android:color/transparent"/>
    

    <LinearLayout
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@android:color/white"
    >

        <LinearLayout
                android:id="@+id/home_layout"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="2dp"
        >

            <View
                    android:id="@+id/home_indicator"
                    android:layout_width="55dp"
                    android:layout_height="4dp"
                    android:background="@color/polkadot_pink"
                    android:visibility="invisible"
            />


            <ImageView
                    android:id="@+id/icon_home"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:src="@drawable/home_button"
            />



        </LinearLayout>

        <LinearLayout
                android:id="@+id/play_layout"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
        >
            <View android:layout_width="55dp"
                  android:layout_height="2dp"
                  android:background="@color/polkadot_pink"
                  android:visibility="invisible"
                  android:id="@+id/play_indicator"/>

            <ImageView
                    android:id="@+id/icon_play"
                    android:layout_width="wrap_content"
                    android:layout_height="42.3dp"
                    android:src="@drawable/play_button"
                    android:paddingBottom="2dp"
            />

            

        </LinearLayout>

        <LinearLayout
                android:id="@+id/store_layout"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
        >

            <ImageView
                    android:id="@+id/icon_store"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@drawable/store_button"
                    android:paddingBottom="2dp"
            />

        </LinearLayout>



    </LinearLayout>
                

</RelativeLayout>
    
    
