{
  "compilerOptions": {
      "target": "es6",                         
      "module": "commonjs",    
      "outDir": "./dist",
      "rootDir": "./src",            
      "strict": true,                          
      "esModuleInterop": true,                 
      "skipLibCheck": true,                    
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "typeRoots": ["./node_modules/@types", "./types"]

  },
  "include": ["src/**/*"],                  
  "exclude": ["node_modules", "**/*.spec.ts"]
}