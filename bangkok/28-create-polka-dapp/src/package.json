{
  "name": "create-polka-dapp",
  "version": "0.1.2",
  "description": "Scaffolding CLI to help developers get started with creating fullstack dApps on the Polkadot Ecosystem",
  "repository": {
    "type": "git",
    "url": "https://github.com/OpeOginni/create-polka-dapp.git"
  },
  "main": "./dist/index.js",
  "type": "module",
  "keywords": [
    "polkadot",
    "dapp",
    "frontend",
    "kusama",
    "parachains",
    "substrate",
    "blockchain"
  ],
  "scripts": {
    "typecheck": "tsc",
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "bun dist/index.js",
    "publish-cli": "bun run build && npm publish",
    "local": "bun run build && bun run unlink && bun run link"
  },
  "bin": {
    "create-polka-dapp": "./dist/index.js"
  },
  "author": "opeoginni",
  "license": "MIT",
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.16.9",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@inquirer/prompts": "^6.0.1",
    "ora": "^8.1.0",
    "tsup": "^8.0.2"
  }
}
