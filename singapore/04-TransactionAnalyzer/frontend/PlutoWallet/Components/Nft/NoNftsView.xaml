<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:card="clr-namespace:PlutoWallet.Components.Card"
             x:Class="PlutoWallet.Components.Nft.NoNftsView"
         HeightRequest="80">
    <card:Card IsTransparent="True">
        <card:Card.View>
            <AbsoluteLayout AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1"
                            AbsoluteLayout.LayoutFlags="All"
                            HorizontalOptions="Center"
                            Margin="10">
                <Label AbsoluteLayout.LayoutBounds=".5, .5, 1, 1"
                   AbsoluteLayout.LayoutFlags="All"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"
                   FontSize="25"
                   >
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="No NFTs" FontAttributes="Bold" />

                        </FormattedString>

                    </Label.FormattedText>
                </Label>
            </AbsoluteLayout>
        </card:Card.View>
    </card:Card>
</ContentView>
